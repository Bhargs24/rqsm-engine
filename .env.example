# RQSM-Engine Environment Variables Template
# Copy this file to .env and fill in your actual values

# LLM Provider Selection
# Options: "huggingface", "ollama", "gemini", "openai"
LLM_PROVIDER=huggingface

# Hugging Face (FREE - recommended for demo)
# Get free API key: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_hf_token_here
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Ollama (FREE - runs locally, no API key needed)
# Install: https://ollama.ai/
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Google Gemini (FREE tier - 1,500 requests/day)
# Get free API key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# OpenAI (PAID - only if you want to use it)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# LLM Settings (applies to all providers)
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=500

# Application Settings
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# Database Configuration (SQLite for MVP)
DATABASE_URL=sqlite:///./data/rqsm_engine.db

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Role Assignment Parameters
ROLE_SCORE_ALPHA=0.4
ROLE_SCORE_BETA=0.3
ROLE_SCORE_GAMMA=0.3

# State Machine Configuration
TRANSITION_DELAY_TURNS=3
HYSTERESIS_WINDOW_TURNS=7
REALLOCATION_THRESHOLD=0.7

# Session Configuration
MAX_CONTEXT_WINDOW=10
SESSION_TIMEOUT_MINUTES=30
